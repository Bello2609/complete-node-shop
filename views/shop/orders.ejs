</head>
<body>
   <%- include("../includes/navigation.ejs") %>

   <main>
      <% if(orders.length <= 0 ){ %>
            <h1>No item added </h1>
         <% } else{ %>
               <ul>
                  <% orders.forEach(order=>{ %>
                     <li>
                        <h1># <%= order._id %></h1>
                        <ul>
                           <% order.products.forEach(p => { %>
                              <li><%= p.product.title %> (<%= p.quantity %>) - <a href="/order/<%= order._id %>">invoice</a></li>
                          <% }); %>
                        </ul>
                     </li>    
                 <% }); %>
               </ul>
            <% } %>

   </main>
   <%- include("../includes/end.ejs") %>